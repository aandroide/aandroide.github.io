<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<zorder>0.52</zorder>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<animation type="WindowOpen" reversible="false">
		<effect type="slide" start="100,0" end="0,0" delay="160" time="160" />
		<effect type="fade" delay="160" end="100" time="100" />
	</animation>
	<animation type="WindowClose" reversible="false">
		<effect type="slide" start="0,0" end="100,0" delay="160" time="160" />
		<effect type="fade" delay="160" start="100" end="0" time="100" />
	</animation>
	<controls>
		<control type="group">
			<description>Main ListMaker Form</description>
			<top>30</top>
			<left>300</left>
			<width>680</width>
			<height>660</height>
			<control type="image">
				<description>Window Background</description>
				<width>100%</width>
				<height>100%</height>
				<texture colordiffuse="FF232323">white.png</texture>
			</control>

			<!-- HEADER -->
			<control type="image">
				<description>Logo</description>
				<top>30</top>
				<left>30</left>
				<width>90</width>
				<height>30</height>
				<texture>logo.png</texture>
				<aspectratio>keep</aspectratio>
				<align>left</align>
			</control>

			<control type="button" id="99">
				<description>OK</description>
				<top>25</top>
				<right>25</right>
				<height>40</height>
				<width>40</width>
				<texturefocus colordiffuse="FFFFFFFF">left.png</texturefocus>
				<texturenofocus colordiffuse="80FFFFFF">left.png</texturenofocus>
			</control>
			<!-- /HEADER -->

			<control type="list" id="100">
				<description>List Maker</description>
				<top>90</top>
				<left>20</left>
				<width>640</width>
				<height>550</height>
				<onleft>103</onleft>
				<onright>101</onright>
				<scrolltime tween="cubic" easing="out">300</scrolltime>
				<itemlayout height="50" width="640">
					<control type="label">
						<description>List Title</description>
						<visible>!String.IsEmpty(ListItem.Label)</visible>
						<top>0</top>
						<left>20</left>
						<width>600</width>
						<height>50</height>
						<font>font13</font>
						<textcolor>88FFFFFF</textcolor>
						<shadowcolor>00000000</shadowcolor>
						<align>left</align>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<label>[B]$INFO[ListItem.Label][/B]</label>
					</control>
					<control type="image">
						<description>ADD Button</description>
						<visible>String.IsEmpty(ListItem.Label)</visible>
						<top>5</top>
						<left>0</left>
						<width>100%</width>
						<height>40</height>
						<texture colordiffuse="FFEEEEEE">add.png</texture>
						<aspectratio>keep</aspectratio>
						<align>center</align>
					</control>
				</itemlayout>
				<focusedlayout height="50" width="640">
					<control type="image">
						<description>Selected Background</description>
						<top>0</top>
						<left>0</left>
						<width>100%</width>
						<height>50</height>
						<texture colordiffuse="55FFFFFF">white.png</texture>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="label">
						<description>List Title</description>
						<visible>!String.IsEmpty(ListItem.Label)</visible>
						<top>0</top>
						<left>20</left>
						<width>420</width>
						<height>50</height>
						<font>font13</font>
						<textcolor>FFFFFFFF</textcolor>
						<shadowcolor>00000000</shadowcolor>
						<align>left</align>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<label>[B]$INFO[ListItem.Label][/B]</label>
					</control>
					<control type="image">
						<description>ADD</description>
						<visible>String.IsEmpty(ListItem.Label)</visible>
						<top>5</top>
						<left>0</left>
						<width>100%</width>
						<height>40</height>
						<texture colordiffuse="FFFFFFFF">add.png</texture>
						<aspectratio>keep</aspectratio>
						<align>center</align>
					</control>
				</focusedlayout>
			</control>

			<control type="list" id="200">
				<description>Lists Selection</description>
				<top>90</top>
				<left>20</left>
				<width>640</width>
				<height>550</height>
				<onleft>201</onleft>
				<onright>201</onright>
				<scrolltime tween="cubic" easing="out">300</scrolltime>
				<itemlayout height="50" width="640">
					<control type="label">
						<description>List Title</description>
						<top>0</top>
						<left>60</left>
						<width>600</width>
						<height>50</height>
						<font>font13</font>
						<textcolor>88FFFFFF</textcolor>
						<shadowcolor>00000000</shadowcolor>
						<align>left</align>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<label>[B]$INFO[ListItem.Label][/B]</label>
					</control>
					<control type="image">
						<description>selected</description>
						<top>15</top>
						<left>20</left>
						<width>20</width>
						<height>20</height>
						<texture colordiffuse="88FFFFFF">$INFO[ListItem.Property(selected)].png</texture>
						<aspectratio>keep</aspectratio>
						<align>center</align>
					</control>
				</itemlayout>
				<focusedlayout height="50" width="640">
					<control type="image">
						<description>Selected Background</description>
						<top>0</top>
						<left>0</left>
						<width>100%</width>
						<height>50</height>
						<texture colordiffuse="55FFFFFF">white.png</texture>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="label">
						<description>List Title</description>
						<top>0</top>
						<left>60</left>
						<width>600</width>
						<height>50</height>
						<font>font13</font>
						<textcolor>FFFFFFFF</textcolor>
						<shadowcolor>00000000</shadowcolor>
						<align>left</align>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<label>[B]$INFO[ListItem.Label][/B]</label>
					</control>
					<control type="image">
						<description>selected</description>
						<top>15</top>
						<left>20</left>
						<width>20</width>
						<height>20</height>
						<texture colordiffuse="FFFFFFFF">$INFO[ListItem.Property(selected)].png</texture>
						<aspectratio>keep</aspectratio>
						<align>center</align>
					</control>
				</focusedlayout>
			</control>

			<control type="list" id="300">
				<description>Groups Selections</description>
				<top>90</top>
				<left>20</left>
				<width>640</width>
				<height>550</height>
				<scrolltime tween="cubic" easing="out">300</scrolltime>
				<itemlayout height="50" width="640">
					<control type="label">
						<description>List Title</description>
						<top>0</top>
						<left>60</left>
						<width>600</width>
						<height>50</height>
						<font>font13</font>
						<textcolor>88FFFFFF</textcolor>
						<shadowcolor>00000000</shadowcolor>
						<align>left</align>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<label>[B]$INFO[ListItem.Label][/B]</label>
					</control>
					<control type="image">
						<description>selected</description>
						<top>15</top>
						<left>20</left>
						<width>20</width>
						<height>20</height>
						<texture colordiffuse="88FFFFFF">$INFO[ListItem.Property(selected)].png</texture>
						<aspectratio>keep</aspectratio>
						<align>center</align>
					</control>
				</itemlayout>
				<focusedlayout height="50" width="640">
					<control type="image">
						<description>Selected Background</description>
						<top>0</top>
						<left>0</left>
						<width>100%</width>
						<height>50</height>
						<texture colordiffuse="55FFFFFF">white.png</texture>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="label">
						<description>List Title</description>
						<top>0</top>
						<left>60</left>
						<width>600</width>
						<height>50</height>
						<font>font13</font>
						<textcolor>FFFFFFFF</textcolor>
						<shadowcolor>00000000</shadowcolor>
						<align>left</align>
						<aligny>center</aligny>
						<scroll>true</scroll>
						<label>[B]$INFO[ListItem.Label][/B]</label>
					</control>
					<control type="image">
						<description>selected</description>
						<top>15</top>
						<left>20</left>
						<width>20</width>
						<height>20</height>
						<texture colordiffuse="FFFFFFFF">$INFO[ListItem.Property(selected)].png</texture>
						<aspectratio>keep</aspectratio>
						<align>center</align>
					</control>
				</focusedlayout>
			</control>

			<control type="group" id="1100">
				<description>Row of List Item Buttons</description>
				<top>85</top>
				<right>20</right>
				
				<visible allowhiddenfocus="false">
					Integer.IsGreaterOrEqual(Container(100).Position, 0) +
					!String.IsEmpty(Container(100).ListItem.Label) +
					Integer.IsGreater(Container(100).NumItems, 1)
				</visible>
				
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(100).Position,0)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(100).Position,1)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(100).Position,2)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(100).Position,3)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(100).Position,4)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(100).Position,5)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(100).Position,6)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(100).Position,7)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(100).Position,8)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(100).Position,9)">Conditional</animation>

				<control type="button" id="101">
					<description>Move Up</description>
					<top>10</top>
					<right>210</right>
					<height>40</height>
					<width>40</width>
					<onleft>100</onleft>
					<onright>102</onright>
					<onup>Control.Move(100,-1)</onup>
					<ondown>Control.Move(100,1)</ondown>
					<texturefocus   colordiffuse="FFFFFFFF">up.png</texturefocus>
					<texturenofocus colordiffuse="80FFFFFF">up.png</texturenofocus>
				</control>
				<control type="button" id="102">
					<description>Move Down</description>
					<top>10</top>
					<right>170</right>
					<height>40</height>
					<width>40</width>
					<onleft>101</onleft>
					<onright>103</onright>
					<onup>Control.Move(100,-1)</onup>
					<ondown>Control.Move(100,1)</ondown>
					<texturefocus   colordiffuse="FFFFFFFF">down.png</texturefocus>
					<texturenofocus colordiffuse="80FFFFFF">down.png</texturenofocus>
				</control>
				<control type="button" id="103">
					<description>Lists-Groups Choice</description>
					<top>10</top>
					<right>130</right>
					<height>40</height>
					<width>40</width>
					<onleft>102</onleft>
					<onright>104</onright>
					<onup>Control.Move(100,-1)</onup>
					<ondown>Control.Move(100,1)</ondown>
					<texturefocus   colordiffuse="FFFFFFFF">right.png</texturefocus>
					<texturenofocus colordiffuse="80FFFFFF">right.png</texturenofocus>
				</control>
				<control type="button" id="104">
					<description>Lists-Groups Reset</description>
					<top>10</top>
					<right>90</right>
					<height>40</height>
					<width>40</width>
					<onleft>103</onleft>
					<onright>105</onright>
					<onup>Control.Move(100,-1)</onup>
					<ondown>Control.Move(100,1)</ondown>
					<texturefocus   colordiffuse="FFFFFFFF">select-all.png</texturefocus>
					<texturenofocus colordiffuse="80FFFFFF">select-all.png</texturenofocus>
				</control>
				<control type="button" id="105">
					<description>Delete</description>
					<top>10</top>
					<right>50</right>
					<height>40</height>
					<width>40</width>
					<onleft>104</onleft>
					<onright>106</onright>
					<onup>Control.Move(100,-1)</onup>
					<ondown>Control.Move(100,1)</ondown>
					<texturefocus   colordiffuse="FFFFFFFF">delete.png</texturefocus>
					<texturenofocus colordiffuse="80FFFFFF">delete.png</texturenofocus>
				</control>
				<control type="button" id="106">
					<description>Refresh</description>
					<top>10</top>
					<right>10</right>
					<height>40</height>
					<width>40</width>
					<onleft>105</onleft>
					<onright>101</onright>
					<onup>Control.Move(100,-1)</onup>
					<ondown>Control.Move(100,1)</ondown>
					<texturefocus   colordiffuse="FFFFFFFF">refresh.png</texturefocus>
					<texturenofocus colordiffuse="80FFFFFF">refresh.png</texturenofocus>
				</control>
			</control>

			<control type="group" id="1200">
				<description>List Help Button</description>
				<top>85</top>
				<right>20</right>
				
				<visible allowhiddenfocus="false">
					Integer.IsGreaterOrEqual(Container(200).Position, 0) +
					!String.IsEmpty(Container(200).ListItem.Property(groups)) +
					Integer.IsGreater(Container(200).NumItems, 0)
				</visible>
				
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(200).Position,0)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(200).Position,1)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(200).Position,2)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(200).Position,3)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(200).Position,4)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(200).Position,5)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(200).Position,6)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(200).Position,7)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(200).Position,8)">Conditional</animation>
				<animation effect="slide" end="0,50" condition="Integer.IsGreater(Container(200).Position,9)">Conditional</animation>

				<control type="button" id="201">
					<description>Options</description>
					<top>10</top>
					<right>10</right>
					<height>40</height>
					<width>40</width>
					<onleft>200</onleft>
					<onright>200</onright>
					<onup>Control.Move(200,-1)</onup>
					<ondown>Control.Move(200,1)</ondown>
