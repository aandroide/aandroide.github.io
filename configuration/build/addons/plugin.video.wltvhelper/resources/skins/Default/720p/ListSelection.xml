<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<zorder>0.52</zorder>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<animation type="WindowOpen" reversible="false">
		<effect type="slide" start="100,0" end="0,0" delay="160" time="160" />
		<effect type="fade" delay="160" end="100" time="100" />
	</animation>
	<animation type="WindowClose" reversible="false">
		<effect type="slide" start="0,0" end="100,0" delay="160" time="160" />
		<effect type="fade" delay="160" start="100" end="0" time="100" />
	</animation>
	<controls>
		<control type="group">
			<top>0</top>
			<right>0</right>
			<width>380</width>
			<height>100%</height>
			<control type="image">
				<description>Window Background</description>
				<width>100%</width>
				<height>100%</height>
				<texture colordiffuse="CC000000">white.png</texture>
			</control>
			<control type="image">
				<description>Logo</description>
				<top>40</top>
				<left>40</left>
				<width>300</width>
				<height>40</height>
				<texture>logo.png</texture>
				<aspectratio>keep</aspectratio>
				<align>center</align>
			</control>

			<control type="list" id="1">
				<description>Episodes List</description>
				<top>110</top>
				<left>40</left>
				<width>300</width>
				<height>570</height>
				<scrolltime tween="cubic" easing="out">300</scrolltime>
				<itemlayout height="50" width="300">
					<control type="image">
						<description>selected</description>
						<top>15</top>
						<left>20</left>
						<width>20</width>
						<height>20</height>
						<texture colordiffuse="88FFFFFF">$INFO[ListItem.Art(icon)]</texture>
						<aspectratio>keep</aspectratio>
						<align>center</align>
					</control>
					<control type="textbox">
						<description>Episode Title</description>
						<top>0</top>
						<left>50</left>
						<width>250</width>
						<height>50</height>
						<font>font13</font>
						<textcolor>88FFFFFF</textcolor>
						<shadowcolor>00000000</shadowcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>[B]$INFO[ListItem.Label][/B]</label>
					</control>
				</itemlayout>
				<focusedlayout height="50" width="300">
					<control type="image">
						<description>Selected Background</description>
						<top>0</top>
						<left>0</left>
						<width>300</width>
						<height>50</height>
						<texture colordiffuse="55FFFFFF">white.png</texture>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="image">
						<description>selected</description>
						<top>15</top>
						<left>20</left>
						<width>20</width>
						<height>20</height>
						<texture colordiffuse="FFFFFFFF">$INFO[ListItem.Art(icon)]</texture>
						<aspectratio>keep</aspectratio>
						<align>center</align>
					</control>
					<control type="textbox">
						<description>Episode Title</description>
						<top>0</top>
						<left>50</left>
						<width>230</width>
						<height>50</height>
						<font>font13</font>
						<textcolor>FFFFFFFF</textcolor>
						<shadowcolor>00000000</shadowcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>[B]$INFO[ListItem.Label][/B]</label>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>